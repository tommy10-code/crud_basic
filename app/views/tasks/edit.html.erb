<h1>編集ページ</h1>

  <% if @task.errors.any? %>
    <div>
      <h2><%= @task.errors.count %>件のエラーが発生しました</h2>
      <ul>
        <% @task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model: @task, local: true do |f| %>
  <%= f.label :title, "タイトル" %>
  <%= f.text_field :title %>

  <%= f.label :body, "内容" %>
  <%= f.text_area :body %>

  <%= f.submit "更新" %>

  <% end %>



<%= link_to "TOPページへ戻る", root_path %>
