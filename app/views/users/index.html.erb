<!-- app/views/users/index.html.erb -->
<div class="flex gap-6">
  <!-- 左：ユーザーリスト -->
  <div class="w-1/3 space-y-2">
    <h2 class="font-bold text-lg">ユーザー一覧</h2>
    <% @users.each do |user| %>
      <%= link_to user[:name], user_path(user[:id]), data: { turbo_frame: "user-detail" }, class: "block p-2 border rounded hover:bg-gray-100" %>
    <!-- 同じIDを持つ <turbo-frame> の中に差し込む -->
    <% end %>
  </div>

  <!-- 右：詳細エリア（Turbo Frame） -->
  <div class="w-2/3">
  <!-- 差し込み口 -->
    <%= turbo_frame_tag "user-detail" do %>
      <p>ユーザーをクリックするとここに詳細が表示されます。</p>
    <% end %>
  </div>
</div>

